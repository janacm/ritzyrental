
<div class="row upspace" style="max-width: 480px; ">
	<%= form_for(@review) do |f| %>
	  <% if @review.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

	      <ul>
	      <% @review.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <div class="field" id="locationField">
	    <%= f.label :address, "Address"%>
	    <%= f.text_field :address, autofocus: true, id: "autocomplete" %>
	  </div>
	  <div class="field">
	    <%= f.label :comment, "Comment" %>
	    <%= f.text_field :comment %>
	  </div>
	  <div class="field num">
	    <%= f.label :management %>
	    <%= f.range_field :management, min: 1, max: 5%>
	  </div>
	  <div class="field num">
	    <%= f.label :condition %>
	    <%= f.range_field :condition, min: 1, max: 5 %>
	  </div>
	  <div class="field num">
	    <%= f.label :pest %>
	    <%= f.range_field :pest, min: 1, max: 5 %>
	  </div>
	  <div class="field num">
	    <%= f.label :social %>
	    <%= f.range_field :social, min: 1, max: 5 %>
	  </div>
	  <div class="actions">
	    <%= f.submit "Rate You LandLord", class: 'signup' %>
	  </div>
	<% end %>
</div>


